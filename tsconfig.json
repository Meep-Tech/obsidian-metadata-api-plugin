{
  "compilerOptions": {
	"declaration": true,
    "outFile": "./build/lib/main.d.ts",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "scripthost",
      "es2015",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
